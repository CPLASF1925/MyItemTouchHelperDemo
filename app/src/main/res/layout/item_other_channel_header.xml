<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/tv_not_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="@string/other_channel"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_not_added_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_not_added"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/tv_not_added"
        android:text="长按编辑,点击移动"
        android:textColor="@color/tip"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/tv_not_added_tip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:onClick="next"
        android:text="next"
        android:textColor="@color/red_500" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/tip" />
</RelativeLayout>